# syntax=docker/dockerfile:1
FROM docker.io/a2rchi/a2rchi-python-base:latest 
RUN mkdir -p /root/archi
WORKDIR /root/archi

COPY LICENSE LICENSE

#EXPOSE 7861

# ensure this directory is present for prod-801 deployment
# RUN if [ "$BUILD_ENV" = "prod-801" ] ; then mkdir /root/data/801-content ; fi

# Install Firefox and Geckodriver for Selenium 
RUN apt-get update && apt-get install -y \
    firefox-esr \
    wget \
    gnupg \
    git \
    ca-certificates \
    --no-install-recommends \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Geckodriver (architecture-aware)
ARG TARGETARCH
RUN GECKO_VERSION="v0.36.0" && \
    if [ "$TARGETARCH" = "arm64" ]; then \
        GECKO_ARCH="linux-aarch64"; \
    else \
        GECKO_ARCH="linux64"; \
    fi && \
    wget -q "https://github.com/mozilla/geckodriver/releases/download/${GECKO_VERSION}/geckodriver-${GECKO_VERSION}-${GECKO_ARCH}.tar.gz" \
    && tar -xzf "geckodriver-${GECKO_VERSION}-${GECKO_ARCH}.tar.gz" -C /usr/local/bin \
    && chmod +x /usr/local/bin/geckodriver \
    && rm "geckodriver-${GECKO_VERSION}-${GECKO_ARCH}.tar.gz"

COPY archi_code src
COPY configs configs
COPY pyproject.toml pyproject.toml
COPY weblists weblists
RUN pip install --upgrade pip && pip install .

# Optional: Oracle database support for agent tools
# Installs python-oracledb + Oracle Instant Client (thick mode for NNE support)
ARG INSTALL_ORACLE=false
RUN if [ "$INSTALL_ORACLE" = "true" ] ; then \
        pip install oracledb>=2.0.0 && \
        apt-get update && (apt-get install -y --no-install-recommends libaio1 unzip || apt-get install -y --no-install-recommends libaio1t64 unzip) && \
        mkdir -p /opt/oracle && \
        wget -q https://download.oracle.com/otn_software/linux/instantclient/2350000/instantclient-basiclite-linux.x64-23.5.0.24.07.zip \
            -O /tmp/instantclient.zip && \
        unzip -q /tmp/instantclient.zip -d /opt/oracle && \
        rm /tmp/instantclient.zip && \
        ln -sf /usr/lib/x86_64-linux-gnu/libaio.so.1t64 /usr/lib/x86_64-linux-gnu/libaio.so.1 2>/dev/null || true && \
        echo /opt/oracle/instantclient_23_5 > /etc/ld.so.conf.d/oracle-instantclient.conf && \
        ldconfig && \
        apt-get clean && rm -rf /var/lib/apt/lists/* ; \
    fi
ENV LD_LIBRARY_PATH=/opt/oracle/instantclient_23_5:${LD_LIBRARY_PATH}

RUN chmod g+rx /root; chmod -R g+w /root/archi/src/interfaces

ARG APP_VERSION=unknown
ENV APP_VERSION=${APP_VERSION}

CMD ["python", "-u", "src/bin/service_chat.py"]
